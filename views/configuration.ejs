          "shopify_rules" : [],
          "trello_rules" : {}
        };

        // Recieved orders go to
        var recieved = $("#recievedOrders").find(":selected");
        if(recieved.val() === "-") {
          rulesData["recieved"] = null;
        } else {
          rulesData["recieved"] = recieved.attr('id');
        };

        // Fulfilled orders go to
        var fulfilled = $("#fulfilledOrders").find(":selected");
